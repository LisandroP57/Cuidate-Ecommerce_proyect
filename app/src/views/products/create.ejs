<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head', {title: 'Agregar producto'}) %>
<title>Cuidate! Agregar Producto</title>
<body class="create-edit-body">
	<!-- Header -->
	<%- include('../partials/header') %>
	<main class="addProduct">
		<div class="createForm">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Agregar Producto</h2>
				</div>
			</div>
			<div class="col-12">
				<form action="/products/" method="POST" enctype="multipart/form-data">
					<div class="Addform">
						<div class="addInput">
							<label for="name" class="form-label">Nombre:</label>
							<input type="text" id="name" name="name" placeholder="Ej: Gas pimienta" class="form-input">
							<% if(locals.errors && errors.name) {%>
								<small class="text-danger"><%= errors.name.msg %></small>
							<% } %>
						</div>
						<div class="addInput">
							<label for="price" class="form-label">Precio:</label>
							<input type="text" id="price" name="price" placeholder="Ej: $123" class="form-input">
							<% if(locals.errors && errors.price) {%>
								<small class="text-danger"><%= errors.price.msg %></small>
							<% } %>
						</div>
						<div class="addInput">
							<label for="discount" class="form-label">Descuento:</label>
							<input type="text" id="discount" name="discount" placeholder="Ej: 57%" class="form-input">
							<span class="error-message">
								<%= locals.errors && locals.errors.discount ? locals.errors.discount.msg : null %>
						  	</span>
						</div>
						<div class="addInput">
							<label for="category" class="form-label">Categoría:</label>
							<select name="category" id="category" class="form-input">
								<option value="">Elegí</option>
								<option value="in-sale">En oferta</option>
								<option value="visited">Últimos agregados</option>
							</select>
						</div>
						<div class="description1">
							<label for="description" class="form-label">Descripción:</label>
							<textarea name="description" id="description" class="form-input"></textarea>
							<span class="error-message">
								<%= locals.errors && locals.errors.description ? locals.errors.description.msg : null %>
							</span>
						</div>
						<div class="multer">
							<label for="image" class="form-label">Image:</label>
							<input type="file" id="image" name="image" placeholder="Ej: 15" class="form-input">
							<span class="error-message">
								<%= locals.errors && locals.errors.img ? locals.errors.img.msg : null %>
						  	</span>
						</div>
						<div class="sendButton">
							<button type="submit" class="buy-now-button">Agregar producto</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</main>
	<!-- footer -->
	<%- include('../partials/footer') %>
</body>	
</html>