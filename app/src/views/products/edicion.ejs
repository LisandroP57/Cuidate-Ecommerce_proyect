<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head') %>
<title>Cuidate! Editar Producto</title>

<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<main class="addProduct">
		<div class="createForm">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Estás editando:</h2>
				</div>
			</div>
			<div class="col-12">
				<form action="/products/" method="POST">
					<div class="row product-detail">
						<div class="col-12-col-md-6">
							<label for="name" class="form-label">Nombre del producto:</label>
							<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" value="" class="form-input">
						</div>
						<div class="col-12-col-md-6">
							<label for="price" class="form-label">Precio del producto:</label>
							<input type="text" id="price" name="price" placeholder="Ej: 5678" value="<%= productToEdit.price %>" class="form-input">
						</div>
						<div class="col-12-col-md-6">
							<label for="discount" class="form-label">Descuento:</label>
							<input type="text" id="discount" name="discount" placeholder="Ej: 15" value="<%= productToEdit.discount %>" class="form-input">
						</div>
						<div class="col-12-col-md-6">
							<label for="category" class="form-label">Categoría:</label>
							<select name="category" id="category" class="form-input">
								<option value="">Elegí</option>
								<option value="in-sale" <%= productToEdit.category === "in-sale" && "selected" %>>En oferta</option>
								<option value="visited" <%= productToEdit.category === "visited" && "selected" %> >Últimos agregados</option>
							</select>
						</div>
						<div class="col-12">
							<label for="description" class="form-label">Descipción:</label>
							<textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
						</div>
						<div class="col-12">
							<button type="submit" class="buy-now-button">Guardar producto</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</main>

	<!-- footer -->
	<%- include('../partials/footer') %>
</body>	
</html>