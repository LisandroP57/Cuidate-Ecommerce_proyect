<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head')%>
    <title>Cuidate! Home</title>
<body>
    <%- include('partials/header')%>

    <!-- All Products -->
    <div class="container-allProducts">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<%productsVisited.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%- product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<!-- <h2><%- toThousand(product.price) %></h2> -->
								<h2><%- toThousand (product.price - (product.price * product.discount/100)) %></h2>
								<% if(product.discount > 0){ %>
									<span><%- product.discount %> %OFF</span>
								<%}%>
								
								<p><%- product.name%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<%});%>
			
		</div>
	</div>
    <!-- Fin All Products -->

    <%- include('partials/footer')%>
</body>
</html>