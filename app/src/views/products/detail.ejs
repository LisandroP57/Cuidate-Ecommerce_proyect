<!DOCTYPE html>
<html lang="es" class="htmlDetail">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Detalle'}) %>

	<body class="bodyDetail">
		<!-- Header -->
		<%- include('../partials/header') %>
			<!-- /Header -->
			<!-- product detail -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Detalle del producto: <%= product.name %>
						</h2>
					</div>
				</div>
				<section class="containersproductmy-3pt-3">
				<div class="product-detail">
					<div class="row">
						<div class="col-12 col-lg-8">
							<img src="/images/products/<%= product.image %>" alt="product image"
								class="product-detail-img">
							</div>
							
							<div class="col-12 col-lg-4">
								<article class="product-detail-info">
									<h2 class="product-detail-title">
										<%= product.name %>
									</h2>
									
									<p class="product-detail-description">
										<%= product.description %>
									</p>
								<% if (product.discount> 0) { %>
									<p class="product-detail-price small">
										/
										<b>
											<%= product.discount %>% OFF
										</b>
									</p>
									<p class="product-detail-price">
										Precio
									</p>
								<% } else{ %>
										 <p class="product-detail-price">
											Precio
										</p>
									 <% } %> 

									<ul class="actions-list">
										<li>
											<i class="fas fa-credit-card"></i>
												<p>Pag√° en 12 cuotas sin interes</p>
										</li>
										<li>
											<i class="fas fa-store"></i>
												<p>Retiro gratis en locales del vendedor</p>
										</li>
									</ul>

									<div class="fila">
										<div class="size">
											<label for="">Cantidad Por Mayor</label>
											<select name="" id="">
												<option value="">5</option>
												<option value="">10</option>
												<option value="">15</option>
												<option value="">20</option>
											</select>
										</div>
									</div>
									<hr>
									<a href="#" class="buy-now-button-detail">COMPRAR AHORA</a>
									<hr>
									<% if (typeof session.user != "undefined") { %>
										
									<% if (session.user.type === "ADMIN") { %>
									<a href="/admin/products/edit/<%= product.id %> " class="action-button edit" >EDITAR PRODUCTO</a>
                                    <form action="/admin/products/delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                                        <button type="submit" class="action-button delete">ELIMINAR</button><!--  DELETE me lleva a eliminar todo, hace http, GET post -->
                                    </form>
									<% } %>

									<% } %>


							</article>
						</div>
					</div>
				</div>
			</div>
			<!-- /product detail -->

			<!-- footer -->
			<%- include('../partials/footer') %>
				<!-- /footer -->
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

	</body>

</html>