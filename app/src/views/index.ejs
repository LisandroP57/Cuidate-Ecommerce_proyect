<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
	<title>Cuidate! Inicio</title>
<body class="homeBody">
		<!-- Header -->
    <%- include('partials/header') %>
		<!-- Fin Header -->

		<!-- Carrousel -->
    <%- include('partials/carrousel') %>
		<!-- Fin Carrousel -->


	<!-- productos -->
	<div class="container-allProducts">
        <div class="row">
			<div class="col-12">
				<h2 class="products-title">Destacados</h2>
			</div>
			<% productsVisited.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%- product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%- toThousand(product.price) %></h2>
								<p><%- product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>

    <!-- Ofertas -->
    <div class="container-allProducts">
		<div class="row">
			<div class="col-12">
				<h2 class="title-products">Ofertas</h2>
			</div>
			<% productsInSale.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%- product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%- toThousand(product.price) %></h2>
								<p><%- product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
		<!-- Fin productos -->

		<!-- Footer -->
	<%- include('partials/footer') %>
		<!-- Fin Footer -->
</body>
</html>