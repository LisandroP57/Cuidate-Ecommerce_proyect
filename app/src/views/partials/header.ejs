<header class="containerHeader">
        
    <div class="primer-menu">

        <div class="menu-hamburguesa">
            <a href="#">
                <img src="/images/header/menu.png" alt="">
            </a>
        </div>

        <div class="logo">
            <a href="/">
                <img src="/images/logo/logo.png" alt="">
                <span>Cuidate!</span>
            </a>
        </div>

        <div class="buscador">
            <form action="/search" method="GET" class="search-form">
                <input class="input-header" type="text" name="keywords" placeholder="Buscar productos, marcas y más">
            </form>
            <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
        </div>

        <div class="crear">
            <% if (typeof session.user != "undefined") { %>
            <% } else {%>
                <a href="/users/register">
                    <img src="/images/header/create.png" alt="">
                    <a href="/users/register">Registrarse</a>
                </a>
            <% } %>
        </div>

        <div class="iniciar">
            <div class="user">
                <% if (typeof session.user != "undefined") { %>
                    <img class="session" src="/images/header/login-online.png" alt="">
                    <a class="online" href="#">• Online</a>
                    
                    <!-- Aca insertar a futuro el nombre del usuario logeado -->
                    <div class="menu-user">
                        <a href="/users/profile">Mi perfil</a>
                        <a href="/users/logout">Cerrar sesión</a>
                        <% if (session.user.type === "ADMIN") { %>
                            <a href="/admin/index">ADMIN</a>
                        <% } %>
                    </div>
                <% } else {%>
                    <a href="/users/login">
                        <img src="/images/header/login.png" alt="">
                        <a href="/users/login">Iniciar sesion</a>
                    </a>
                <% } %>
            </div>
        </div>

        <div class="shoppingcart">
            <a href="/products/shoppingcart">
                <img src="/images/header/shoppingcart.png" alt="">
                <a href="/products/shoppingcart">Ver compra</a>
            </a>
        </div>

    </div>

    <nav class="navegador">
        <ul class="menu">
            <% if (typeof session.user != "undefined") { %>
                <% if (session.user.type === "ADMIN") { %>
                    <li><a href="/admin/products/create">Crear prod.</a></li>
                <% } %>
            <% } %>
            <li><a href="/products/allProducts">Productos</a></li>
            <li><a href="/#offers">Ofertas</a></li>
            <li><a href="/#redes">Contactanos</a></li>
        </ul>
    </nav>
</header>