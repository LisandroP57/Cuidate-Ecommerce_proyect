<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head', {title: 'Registro'}) %>
    
<body class="register">

    <%- include('../partials/header') %>

    <main class="main-log-reg">
        <div class="form-complete">
            <div class="form-container">
                <a href="/"><h2>Cuidate!</h2></a>
                <hr>
                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <div class="form">
                        <div class="input-container-names">
                            <span class="top-message">Nombre</span>
                            <input class="input-style" type="text" name="name" placeholder="Ingrese su nombre">
                            <% if (locals.errors && errors.name) { %>
                                <small class="text-danger"><%= errors.name.msg %> </small>
                            <% } %>

                            <span class="top-message">Apellido</span>
                            <input class="input-style" type="text" name="last_name" placeholder="Ingrese su apellido">
                            <% if (locals.errors && errors.last_name) { %>
                                <small class="text-danger"><%= errors.last_name.msg %> </small>
                            <% } %>
                            
                        </div>
                        <div class="input-container">
                            <span class="top-message">E-mail</span>
                            <input class="input-style" type="email" name="email" placeholder="Ingrese su email">
                            <% if (locals.errors && errors.email) { %>
                                <small class="text-danger"><%= errors.email.msg %> </small>
                            <% } %>
                            
                        </div>
                        <div class="input-container">
                            <span class="top-message">Contraseña</span>
                            <input class="input-style" type="password" name="pass1" placeholder="Ingrese su contraseña">
                            <% if (locals.errors && errors.pass1) { %>
                                <small class="text-danger"><%= errors.pass1.msg %> </small>
                            <% } %>
                            
                        </div>
                        <div class="input-container">
                            <span class="top-message">Vuelve a escribir la contraseña</span>
                            <input class="input-style" type="password" name="pass2" placeholder="Re-ingrese su contraseña">
                            <% if (locals.errors && errors.pass2) { %>
                                <small class="text-danger"><%= errors.pass2.msg %> </small>
                            <% } %>
                        </div>

                        <div class="input-file">
                            <p>Agregar foto</p>
                            <input class="form-control" type="file" id="image" name="avatar">
                        </div>
                        <div class="terms-conditions">
                            <div class="checkbox-slider">
                                <input type="checkbox" name="remember" id="my-slider"> 
                                <label for="my-slider">  Acepto los <a href="">términos y condiciones</a> </label>
                            </div>
                            <% if (locals.errors && errors.terms) { %>
                                <small class="text-danger"><%= errors.terms.msg %> </small>
                            <% } %>
                        </div>
                        <div class="button-container">
                            <button type="submit" class="btn-submit-register">Registrarme</button>
                        </div> 
                    </div>
                </div>
            </form>
            <div class="form-two">
                <span><a href="login">Ya tengo una cuenta</a></span>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    
</body>
</html>