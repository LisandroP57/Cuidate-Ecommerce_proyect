<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head', {title: 'Acceder'}) %>
<body>
    <%- include("../partials/header") %>

    <main class="main-log-reg">
        <div class="form-complete">
            <div class="form-container">
                <a href="/home"><h2>Cuidate!</h2></a>
                <hr>
                <form action="/users/login" method="POST">
                    <div class="form">
                        <div class="input-container">
                            <span class="top-message">E-mail</span>
                            <input class="input-style" type="email" required name="email" placeholder="Ingrese su e-mail">
                            <% if (locals.errors && errors.email) { %>
                                <small class="text-danger"><%= errors.email.msg %> </small>
                            <% } %>
                        </div>
                        <div class="input-container">
                            <span class="top-message">Contraseña</span>
                            <input class="input-style" required type="password" name="pass" placeholder="Ingrese su contraseña">
                            <% if (locals.errors && errors.pass) { %>
                                <small class="text-danger"><%= errors.pass.msg %> </small>
                            <% } %>
                        </div>
                        <div class="checkbox-slider">
                            <input type="checkbox" id="my-slider"> 
                            <label for="my-slider">Recordar sesión</label>
                        </div>
                        <% if (locals.errorMsg ) { %>
                            <small class="text-danger"><%= errorMsg %> </small>
                        <% } %>
                        <div class="button-container">
                            <button type="submit" class="btn-submit">Acceder !</button>
                            <span class="error-message">Credenciales inválidas</span>
                        </div>
                        <div class="lost-pass">
                            <a class="link" href="forgetPassword">¿Has olvidado tu contraseña?</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="form-two">
                <span><p>¿No tienes una cuenta?<a class="link" href="register"> Regístrate</a></p></span>
            </div>
        </div>
        <div class="img-login">
            <img src="/images/img-login.png" alt="">
        </div>
    </main>

    <%- include("../partials/footer") %>
</body>
</html>